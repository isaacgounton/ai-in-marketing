---
interface Props {
  id?: string;
  class?: string;
  background?: 'white' | 'gray' | 'gradient';
}

const { 
  id, 
  class: className = '',
  background = 'white'
} = Astro.props;

const bgClasses = {
  white: 'bg-white',
  gray: 'bg-gray-50',
  gradient: 'bg-gradient-to-b from-white to-gray-50'
};
---

<section id={id} class={`section ${bgClasses[background]} ${className}`}>
  <div class="container">
    <slot />
  </div>
</section>
